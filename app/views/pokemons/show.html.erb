<body>
  <div id="pokemon-name">
    <%= @pokemon.name.tr('[]', '').gsub(/[""]/, '').capitalize %>
  </div>
  <div id="sprite">
    <%= image_tag("http://img.pokemondb.net/sprites/black-white/anim/normal/" +  @pokemon.name.tr('[]', '').gsub(/[""]/, '') + ".gif", :class => "single-sprite") %>
  </div>
</body>
